---
import PeopleCard from './PeopleCard.astro';
const { title, items, large = false } = Astro.props; // items: array of collection entries
if (!items || items.length === 0) return;
---
<section class="mb-12">
  <h2 class="text-xl font-semibold mb-5">{title}</h2>

  <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
    {items.map((entry) => (
      <PeopleCard entry={entry} size={large ? 'lg' : 'md'} />
    ))}
  </div>
</section>
