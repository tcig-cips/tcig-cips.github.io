---
const { entry, size = 'md' } = Astro.props;
const avatar = entry.data.image ?? '/images/placeholder-avatar.svg';

// square sizes
const sizeClass = size === 'lg'
  ? 'h-44 w-44'
  : 'h-44 w-44';
---
<article id={entry.slug} class="text-center">
  <div
    class={`mx-auto ${sizeClass} aspect-square rounded-xl overflow-hidden bg-gray-100 ring-1 ring-black/10`}
    transition:name={`person-${entry.slug}`}  
  >
    <img
      src={avatar}
      alt={entry.data.name}
      class="h-full w-full object-cover transition duration-300 hover:scale-[1.02]"
      loading="lazy"
      width="300" height="300"
    />
  </div>

  <div class="mt-3">
    <div class="font-medium">{entry.data.name}</div>
    {entry.data.role && <div class="text-sm text-gray-600">{entry.data.role}</div>}
  </div>

  <div class="mt-2 flex items-center justify-center gap-3 text-sm">
    {entry.data.website && <a class="underline hover:no-underline" target="_blank" href={entry.data.website}>website</a>}
    {entry.data.scholar && <a class="underline hover:no-underline" target="_blank" href={entry.data.scholar}>scholar</a>}
    {entry.data.github  && <a class="underline hover:no-underline" target="_blank" href={entry.data.github}>github</a>}
    {entry.data.twitter && <a class="underline hover:no-underline" target="_blank" href={entry.data.twitter}>twitter</a>}
  </div>
</article>