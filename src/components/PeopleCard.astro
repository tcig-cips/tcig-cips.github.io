---
const { entry, size = 'md' } = Astro.props; // size: 'md' | 'lg'
const avatar = entry.data.image ?? '/images/placeholder-avatar.svg';

const sizeClass = size === 'lg'
  ? 'h-44 w-44'      // PI bigger portrait
  : 'h-36 w-36';
---
<article class="text-center">
  <div class={`mx-auto overflow-hidden rounded-full bg-gray-100 ${sizeClass}`}>
    <img
      src={avatar}
      alt={entry.data.name}
      class="h-full w-full object-cover transition duration-300 hover:scale-[1.03]"
      loading="lazy"
      width="320"
      height="320"
    />
  </div>

  <div class="mt-3">
    <div class="font-medium">{entry.data.name}</div>
    {entry.data.role && <div class="text-sm text-gray-600">{entry.data.role}</div>}
  </div>

  <div class="mt-2 flex items-center justify-center gap-3 text-sm">
    {entry.data.website && <a class="underline hover:no-underline" href={entry.data.website}>website</a>}
    {entry.data.scholar && <a class="underline hover:no-underline" href={entry.data.scholar}>scholar</a>}
    {entry.data.github  && <a class="underline hover:no-underline" href={entry.data.github}>github</a>}
    {entry.data.twitter && <a class="underline hover:no-underline" href={entry.data.twitter}>twitter</a>}
  </div>
</article>
